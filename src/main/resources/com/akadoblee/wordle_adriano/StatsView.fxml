<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="850.0" prefWidth="1284.0" alignment="CENTER" spacing="20" styleClass="stats-pane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.akadoblee.wordle_adriano.StatsController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Estadísticas de la partida" styleClass="stats-title"/>
    
    <VBox spacing="10" alignment="CENTER" styleClass="stats-container">
        <Label text="Palabra objetivo:" styleClass="stats-label"/>
        <Label fx:id="targetWordLabel" styleClass="stats-value"/>
        
        <Label text="Número de intentos:" styleClass="stats-label"/>
        <Label fx:id="attemptsLabel" styleClass="stats-value"/>
        
        <Label text="Letras utilizadas:" styleClass="stats-label"/>
        <Label fx:id="usedLettersLabel" styleClass="stats-value"/>
        
        <HBox spacing="30" alignment="CENTER">
            <VBox alignment="CENTER" spacing="5">
                <Label text="Partidas ganadas" styleClass="stats-label"/>
                <Label fx:id="gamesWonLabel" styleClass="stats-value"/>
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <Label text="Partidas perdidas" styleClass="stats-label"/>
                <Label fx:id="gamesLostLabel" styleClass="stats-value"/>
            </VBox>
        </HBox>
    </VBox>

    <Button text="Nueva Partida" onAction="#onNewGame" styleClass="new-game-button"/>
</VBox>